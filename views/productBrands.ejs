<%- include('partials/header') -%>


<div class="text-center background-brand pb-5">
    <h1 class="pt-5">Products from <%= brandName %></h1>
    <p class="lead pb-5">Choose your product from the <%= brandName %> brand</p>
</div>

<div class="row mx-auto">
    <% products.forEach(function(product) { %>
        <div class="col-md-6 col-lg-4 my-2 p-1">
            <div class="card">
                <img class="card-img" src="<%= '/images/' + product.img %>" alt="<%= product.category %>">
                <div class="card-body">
                    <h5 class="card-title">Description: <%= product.description %></h5>
                    <h5 class="card-title">Title: <%= product.title %></h5>

                    <p class="card-text">Price: $<%= product.price %></p>
                    <form action="/cart" method="post">
                        <input type="hidden" name="productId" value="<%= product._id %>">
                        <button type="submit" class="btn btn-primary">Add to Cart</button>
                    </form>
                </div>
            </div>

        </div>
    <% }) %>
</div>

<%- include('partials/footer') -%>
