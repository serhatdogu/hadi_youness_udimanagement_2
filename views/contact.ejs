<%- include('partials/header') -%>


<br>
  <div class="container contact-form bg-dark ">
    <div class="contact-image">
      <i class="fab fa-rocketchat text-light fa-5x pt-3"></i>
      <form action="/contact/submit-contact" method="post">
        <h3 class="text-light text-center">We would love to hear your feedback.</h3>
        <div class="row my-5">
          <div class="col-md-6">
            <div class="form-group">
              <input type="text" name="name" class="form-control my-1" placeholder="Your Name" value="">
            </div>
            <div class="form-group">
              <input type="email" name="email" class="form-control my-1" placeholder="Your Email" value="">
            </div>
            <div class="form-group">
              <input type="text" name="phone" class="form-control my-1" placeholder="Your Phone" value="">
            </div>
            <div class="form-group">
              <button class="btn btn-light my-2">Send Message</button>
            </div>
          </div>
          <div class="col-md-6">
            <div class="form-group">
              <textarea name="message" class="form-control" style="width: 100%; height: 150px;" id=""></textarea>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('partials/footer') -%>
